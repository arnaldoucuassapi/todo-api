// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  avatar    String?
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())

  @@unique([id, email])
  @@map("users")
}
