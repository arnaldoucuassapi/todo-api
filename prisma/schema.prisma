// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  avatar    String?
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("users")
}
